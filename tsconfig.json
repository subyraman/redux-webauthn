{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "lib": [ "es2020", "dom"],
        "types": ["node", "jest"],
    },
    "exclude": ["demo", "dist", "node_modules"],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "theme": "markdown",
        "exclude": "**/__tests__/**/*",
        "excludeNotExported": true
    }
}